<h3>Post Songs</h3>

<%= form_for(@song) do |f| %>
  <%= f.text_field :title %><br>
  <%= f.text_field :release_year %><br>
  <%= f.text_field :released %><br>
  <%= f.text_field :genre %><br>
  <%= f.text_field :artist_name %><br>
  <%= f.submit %>
<% end %>

<h2><%= @song.title %></h2>
<%= form_tag song_path(@song.id), method: "delete" do %>
  <%= submit_tag "Delete #{@song.title}" %>
<% end %>
